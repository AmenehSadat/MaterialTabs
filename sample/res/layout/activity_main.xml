            <SeekBar android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabPaddingSeekBar"
                android:max="40" />
        </LinearLayout>
        <!--~ Tab Padding Left Right -->

        <!-- Scroll Offset -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/scrollOffsetTextView"
                android:text="@string/scroll_offset" />

            <SeekBar android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollOffsetSeekBar"
                android:max="40" />
        </LinearLayout>
        <!--~ Scroll Offset -->

        <!-- Should Expand -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/shouldExpandTextView"
                android:text="@string/shouldExpand" />

            <CheckBox android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/shouldExpandCheckBox" />
        </LinearLayout>
        <!--~ Should Expand -->

        <!-- Text All Caps -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textAllCapsTextView"
                android:text="@string/textAllCaps" />

            <CheckBox android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textAllCapsCheckBox" />
        </LinearLayout>
        <!--~ Text All Caps -->

        <!-- Padding Middle -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
