                android:id="@+id/unselectedTextStyleRadioGroup"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/unselectedTextStyleButtonNormal"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:minHeight="30dp"
                    android:text="Normal" />

                <RadioButton
                    android:id="@+id/unselectedTextStyleButtonBold"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:minHeight="30dp"
                    android:text="Bold" />

                <RadioButton
                    android:id="@+id/unselectedTextStyleButtonItallic"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:minHeight="30dp"
                    android:text="Itallic" />

