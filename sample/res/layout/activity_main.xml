                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/iris_blue" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/tabBackgroundColorButtonSafetyOrange"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/safety_orange" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/tabBackgroundColorButtonWhite"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:minHeight="30dp"
                    style="@style/RadioButtonBlackCheck"
                    android:background="@color/white" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/tabBackgroundColorButtonBlack"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/black" />
            </RadioGroup>
        </LinearLayout>
        <!--~ Tab Background Color -->

        <!-- Text Selected Style Color -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/text_selected_style" />

            <RadioGroup android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectedTextStyleRadioGroup"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/selectedTextStyleButtonNormal"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:minHeight="30dp"
                    android:text="Normal" />

                <RadioButton
                    android:id="@+id/selectedTextStyleButtonBold"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
