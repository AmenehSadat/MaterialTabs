<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <include layout="@layout/toolbar" />

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/goToTabsActivityButton"
            android:text="Go to TabsActivity" />

        <!-- Indicator Color -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/indicator_color" />

            <RadioGroup android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/indicatorColorRadioGroup"
                android:orientation="horizontal">
                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/indicatorColorButtonFireEngineRed"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/fire_engine_red" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/indicatorColorButtonMantis"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/mantis" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/indicatorColorButtonGorse"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/gorse" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/indicatorColorButtonIrisBlue"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/iris_blue" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/indicatorColorButtonSafetyOrange"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/safety_orange" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/indicatorColorButtonWhite"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:minHeight="30dp"
                    style="@style/RadioButtonBlackCheck"
                    android:background="@color/white" />

                <io.karim.materialtabs.sample.sampleui.RadioButtonCenter
                    android:id="@+id/indicatorColorButtonBlack"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    style="@style/RadioButtonWhiteCheck"
                    android:minHeight="30dp"
                    android:background="@color/black" />
            </RadioGroup>
        </LinearLayout>
        <!--~ Indicator Color -->

        <!-- Underline Color -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
