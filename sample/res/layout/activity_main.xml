                android:layout_marginLeft="5dp"
                android:id="@+id/indicatorHeightTextView"
                android:text="@string/indicator_height" />

            <SeekBar android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/indicatorHeightSeekBar"
                android:max="40" />
        </LinearLayout>
        <!--~ Indicator Height -->

        <!-- Underline Height -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/underlineHeightTextView"
                android:text="@string/underline_height" />

            <SeekBar android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/underlineHeightSeekBar"
                android:max="40" />
        </LinearLayout>
        <!--~ Underline Height -->

        <!-- Tab Padding Left Right -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:layout_width="match_parent"
